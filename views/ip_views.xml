<?xml version="1.0" encoding="ISO-8859-1"?>
<odoo>

    <record id="ipam_ip_tree_view" model="ir.ui.view">
        <field name="name">view.ipam.ip.tree</field>
        <field name="model">ipam.ip</field>
        <field name="type">tree</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" optional="hide" />
                <field name="ip" />
                <field name="net_id" optional="show" />
                <field name="fqdn" />
                <field name="network_address" optional="hide" />
                <field name="mask_bits" optional="hide" />
                <field name="gateway" optional="hide" />
                <field name="netmask" optional="hide" />
                <field name="cidr" optional="show" />
            </tree>
        </field>
    </record>

    <record id="ipam_ip_search_view" model="ir.ui.view">
        <field name="name">ipam.ip.search</field>
        <field name="model">ipam.ip</field>
        <field name="arch" type="xml">
            <search string="Search IP">
                <field name="name" string="Name" filter_domain="[('name', 'ilike', self)]"/>
                <field name="ip" string="IP" filter_domain="[('ip', 'ilike', self)]"/>
                <field name="fqdn" string="Fqdn" filter_domain="[('fqdn', 'ilike', self)]"/>
                <field name="net_id" filter_domain="[('net_id', 'child_of', raw_value)]"/>
                <separator/>
                <group expand="1" string="Group By">
                    <filter string="Network" name="net_id" context="{'group_by':'net_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="ipam_ip_action" model="ir.actions.act_window">
        <field name="name">IPs</field>
        <field name="res_model">ipam.ip</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new IP
            </p>
        </field>
    </record>

</odoo>