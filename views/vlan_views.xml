<?xml version="1.0" encoding="ISO-8859-1"?>
<odoo>
    <record id="ipam_vlan_tree" model="ir.ui.view">
        <field name="name">ipam.vlan.tree</field>
        <field name="model">ipam.vlan</field>
        <field name="type">tree</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <tree string="VLANs">
                <field name="name" />
                <field name="vlan_id" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="ipam_vlan_search_view" model="ir.ui.view">
        <field name="name">ipam.vlan.search</field>
        <field name="model">ipam.vlan</field>
        <field name="arch" type="xml">
            <search string="VLANs">
                <field name="name" string="VLANs"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <record id="ipam_vlan_form" model="ir.ui.view">
        <field name="name">ipam.vlan.form</field>
        <field name="model">ipam.vlan</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <form string="VLAN" class="oe_form_configuration">
                <sheet>

                    <div class="oe_title">
                        <label for="name" string="VLAN Name"/>
                        <h1><field name="name" placeholder="VLAN 1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="vlan_id"/>
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Networks">
                            <field name="subnet_ids">
                                <tree string="Networks">
                                    <field name="display_name"/>
                                    <field name="network_address"/>
                                    <field name="netmask"/>
                                    <field name="cidr"/>
                                    <field name="gateway"/>
                                    <field name="network_type"/>
                                    <field name="free_ip_count"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ipam_vlan_action" model="ir.actions.act_window">
        <field name="name">VLANs</field>
        <field name="res_model">ipam.vlan</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_no
                content">VLANs are used to group networks together. Each network can only belong to one VLAN.</p>
        </field>
    </record>

</odoo>