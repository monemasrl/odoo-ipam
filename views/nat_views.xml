<?xml version="1.0" encoding="ISO-8859-1"?>
<odoo>
    <record id="ipam_nat_tree" model="ir.ui.view">
        <field name="name">ipam.nat.tree</field>
        <field name="model">ipam.nat</field>
        <field name="type">tree</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <tree>
                <field name="dst_subnet_id" />
                <field name="dst_ip" />
                <field name="nat_subnet_id" />
                <field name="nat_ip" />
            </tree>
        </field>
    </record>
    <record id="ipam_nat_form" model="ir.ui.view">
        <field name="name">ipam.nat.form</field>
        <field name="model">ipam.nat</field>
        <field name="type">form</field>
        <field name="mode">primary</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <form string="NAT" class="oe_form_configuration">
                <sheet>
                    <group>
                        <group string="Destination">
                            <field name="dst_subnet_id" />
                            <field name="dst_ip" />
                        </group>
                        <group string="NAT">
                            <field name="nat_subnet_id" />
                            <field name="nat_ip" 
                                widget="dynamic_dropdown"
                                options="{'values':'get_available_nat_ips'}"
                                context="{'depending_on': nat_subnet_id}"
                            />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="ipam_nat_action" model="ir.actions.act_window">
        <field name="name">NAT</field>
        <field name="res_model">ipam.nat</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new NIC
            </p>
        </field>
    </record>
</odoo>